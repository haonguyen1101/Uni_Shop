@model Uni_Shop.Models.ChangePasswordModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1 style="color: black;">Trang cá nhân Admin</h1>
</div><!-- End Page Title -->

<section class="section profile">

    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <img src="~/Admin/assets/img/admin/@TempData["data"]" alt="Profile" class="rounded-circle">
                    <h2>@TempData["TenNV"]</h2>
                </div>
            </div>
        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-overview"> @Html.ActionLink("Thông tin chung", "Index", new { }, new { @style = "font-weight: unset; color: blue;" })</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">@Html.ActionLink("Cập nhật", "CapNhat", new { id = Context.Session.GetInt32("maNV") }, new { @style = "font-weight: unset; color: blue;" })</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-change-password">Đổi mật khẩu</button>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active pt-3" id="profile-change-password">
                            <!-- Change Password Form -->
                            <form asp-action="ChangePassword" onsubmit="return successPassword()">
                                <div class="row mb-3 ">
                                    <label asp-for="CurrenPassword" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="CurrenPassword" class="form-control">
                                        <span asp-validation-for="CurrenPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="NewPassword" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="NewPassword" class="form-control">
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="ConfimNewPassword" class="col-md-4 col-lg-3 col-form-label"></label>
                                    <div class="col-md-8 col-lg-9">
                                        <input asp-for="ConfimNewPassword" class="form-control">
                                        <span asp-validation-for="ConfimNewPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </form><!-- End Change Password Form -->

                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>